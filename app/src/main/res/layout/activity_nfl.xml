<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NFL">

    <AutoCompleteTextView
        android:id="@+id/nfl_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/nfl_first"
        android:hint="pick second player" />

    <AutoCompleteTextView
        android:id="@+id/nfl_first"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="94dp"
        android:hint="pick first player" />

    <Button
        android:id="@+id/compare_nfl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:text="Compare!" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Compare NFL Players"
        android:textAppearance="@android:style/TextAppearance.Material.Display1" />

    <Button
        android:id="@+id/nfl_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Return to Home" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="284dp"
        android:layout_height="383dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nfl_first"
        app:srcCompat="@drawable/nfl_new" />

    <RadioGroup
        android:id="@+id/nfl_group"
        android:layout_width="186dp"
        android:layout_height="80dp"
        android:layout_above="@+id/nfl_back_button"
        android:layout_toStartOf="@+id/nfl_second">

        <RadioButton
            android:id="@+id/NFL2016"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2016 Season" />

        <RadioButton
            android:id="@+id/NFL2017"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2017 Season" />

        <RadioButton
            android:id="@+id/NFL2018"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018 Season" />

    </RadioGroup>

    <Switch
        android:id="@+id/playoff"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="67dp"
        android:layout_marginEnd="55dp"
        android:text="Playoffs" />


</RelativeLayout>