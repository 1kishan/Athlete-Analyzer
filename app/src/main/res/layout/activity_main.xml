<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/MLB_button"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:background="@drawable/mLB_new"
        android:contentDescription="MLB" />

    <ImageButton
        android:id="@+id/NBA_button"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:background="@drawable/nBA_app"
        android:contentDescription="NBA" />

    <ImageButton
        android:id="@+id/NFL_button"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:background="@drawable/nFL_new"
        android:contentDescription="NFL" />
</LinearLayout>