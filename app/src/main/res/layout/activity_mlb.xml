<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MLB">

    <android.support.design.widget.TextInputEditText
        android:id="@+id/mlb_second"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:hint="pick second player" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/mlb_first"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView7"
        android:layout_toStartOf="@+id/compare_mlb"
        android:hint="pick first player" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView6"
        android:layout_toEndOf="@+id/textView4"
        android:text="Player 2 Info" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="94dp"
        android:layout_height="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="101dp"
        android:layout_toStartOf="@+id/textView4"
        android:text="Player 1 Info" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Compare MLB Players" />

    <Button
        android:id="@+id/mlb_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Return to Home" />

    <Button
        android:id="@+id/compare_mlb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="163dp"
        android:text="Compare!" />
</RelativeLayout>